{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"],
			"@utils/*": ["src/utils/*"],
			"@public/*": ["src/public/*"]
		}
	},
	"include": ["src/**/*"]
}
